{{>header}}
<header class="row-fluid text-center">
	<h2>Ntalk - Agenda de contatos</h2>
</header>
<section class="row-fluid text-center">
	<form action="/contact/{{contact._id}}?_method=PUT" method="post" class="well form-inline">
		<h4>Editar contato</h4>
		<label>Nome:</label>
		<input type="text" name="contact[name]" value="{{contact.name}}" class="input-medium">
		<label>E-mail:</label>
		<input type="text" name="contact[email]" value="{{contact.email}}" class="input-medium">
		<button type="submit" class="btn btn-primary">Atualizar</button>
	</form>
</section>
{{>exit}}
{{>footer}}
