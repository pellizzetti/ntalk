{{>header}}
<header class="row-fluid text-center">
  <h2>Ntalk - Agenda de contatos</h2>
</header>
<section class="row-fluid">
  <section class="span12">
    <form action="/contact" method="post" class="well form-inline">
      <input type="text" name="contact[name]" placeholder="Nome">
      <input type="text" name="contact[email]" placeholder="E-mail">
      <button type="submit" class="btn btn-primary">Cadastrar</button>
    </form>
    <table class="table well">
      <thead>
        <tr>
          <th>Nome</th>
          <th>E-mail</th>
          <th>Status</th>
          <th>Ação</th>
        </tr>
      </thead>
      <tbody>
		{{#each contacts}}
			<tr>
				<td>{{name}}</td>
				<td>{{email}}</td>
        <td>
          <span id="notify_{{email}}" class="label">Offline</span>
        </td>
				<td>
					<a href="/contact/{{_id}}" class="btn btn-info">Detalhes</a>
					<a href="/chat" id="chat_{{email}}" class="btn btn-inverse">Conversar</a>
				</td>
			</tr>
		{{/each}}
		</tbody>
    </table>
  </section>
</section>
{{>notify}}
{{>exit}}
{{>footer}}