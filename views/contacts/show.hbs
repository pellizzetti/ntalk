{{>header}}
<header class="row-fluid text-center">
	<h2>Ntalk - Dados do contato</h2>
</header>
<section class="row-fluid text-center">
	<form action="/contact/{{contact._id}}?_method=DELETE" method="post" class="well form-inline">
		<label>Nome:</label>
		<span class="input-medium uneditable-input">{{contact.name}}</span>
		<label>E-mail:</label>
		<span class="input-medium uneditable-input">{{contact.email}}</span>
		<a href="/contact/{{contact._id}}/edit" class="btn btn-info">Editar</a>
		<button type="submit" class="btn btn-danger">Excluir</button>
	</form>
</section>
{{>exit}}
{{>footer}}